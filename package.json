{
  "name": "motoboy-manager",
  "version": "1.0.7",
  "description": "Motoboy Manager",
  "author": "Guilherme AHS",
  "main": "src/main.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build:win": "electron-builder --win nsis",
    "release": "electron-builder --win nsis --publish always"
  },
  "dependencies": {
    "electron-updater": "^6.3.0"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^25.0.0",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.5"
  },
  "build": {
    "appId": "com.suaempresa.motoboymanager",
    "productName": "Motoboy Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**"
    ],
    "win": {
      "icon": "icon.ico",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "oneClick": true,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Motoboy Manager"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "guilhermeahs",
        "repo": "motoboy-manager",
        "releaseType": "release"
      }
      
    ]
  }
}